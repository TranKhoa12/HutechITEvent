@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="bg-primary text-white py-5">
        <div class="container text-center">
            <h1 class="display-3 fw-bold mb-3">Hệ thống Quản lý Sự kiện IT HUTECH</h1>
            <p class="lead mb-4">Nền tảng tổ chức và tham gia các sự kiện, hội thảo, cuộc thi công nghệ thông tin</p>
            <div class="d-flex gap-3 justify-content-center">
                <a asp-controller="Events" asp-action="Index" class="btn btn-light btn-lg px-4">
                    <i class="bi bi-calendar-event"></i> Xem Sự kiện
                </a>
                <a asp-controller="Contests" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    <i class="bi bi-trophy"></i> Cuộc thi
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-calendar-check text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Sự kiện đa dạng</h5>
                        <p class="card-text text-muted">Hội thảo, workshop, seminar về công nghệ thông tin và các lĩnh vực liên quan</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-trophy text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Cuộc thi hấp dẫn</h5>
                        <p class="card-text text-muted">Các cuộc thi lập trình, hackathon, ý tưởng khởi nghiệp với giải thưởng hấp dẫn</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-people text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Kết nối cộng đồng</h5>
                        <p class="card-text text-muted">Gặp gỡ, học hỏi và kết nối với các chuyên gia và sinh viên cùng đam mê</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="bg-light py-5">
            <div class="container text-center">
                <h2 class="mb-3">Tham gia cùng chúng tôi</h2>
                <p class="lead mb-4">Đăng ký tài khoản để không bỏ lỡ các sự kiện và cuộc thi sắp tới</p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5">
                    Đăng ký ngay
                </a>
            </div>
        </div>
    }
</div>
