@model HutechITEvent.Models.Event
@{
    ViewData["Title"] = "Danh sách đăng ký - " + Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Sự kiện</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></li>
            <li class="breadcrumb-item active">Danh sách đăng ký</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Danh sách đăng ký</h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <div class="row">
                <div class="col-md-4">
                    <strong>Số lượng đăng ký:</strong> @Model.Registrations.Count / @Model.MaxParticipants
                </div>
                <div class="col-md-4">
                    <strong>Đã điểm danh:</strong> @Model.Registrations.Count(r => r.IsAttended)
                </div>
                <div class="col-md-4">
                    <strong>Chưa điểm danh:</strong> @Model.Registrations.Count(r => !r.IsAttended)
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Registrations.Any())
    {
        <div class="alert alert-info">
            <h4>Chưa có đăng ký nào</h4>
            <p>Hiện tại chưa có sinh viên nào đăng ký sự kiện này.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>MSSV</th>
                        <th>Họ tên</th>
                        <th>Lớp</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Ngày đăng ký</th>
                        <th>Trạng thái</th>
                        <th>Điểm danh</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{int index = 1;}
                    @foreach (var item in Model.Registrations.OrderBy(r => r.RegisteredAt))
                    {
                        <tr class="@(item.IsAttended ? "table-success" : "")">
                            <td>@index</td>
                            <td>@item.Student.StudentId</td>
                            <td>@item.Student.FullName</td>
                            <td>@item.Student.Class</td>
                            <td>@item.Student.Email</td>
                            <td>@item.Student.PhoneNumber</td>
                            <td>
                                <small>@item.RegisteredAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <span class="badge bg-@(item.Status == RegistrationStatus.Confirmed ? "success" : item.Status == RegistrationStatus.Pending ? "warning" : "danger")">
                                    @item.Status.ToString()
                                </span>
                            </td>
                            <td>
                                @if (item.IsAttended)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle-fill"></i> Đã điểm danh
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-circle"></i> Chưa
                                    </span>
                                }
                            </td>
                            <td>
                                <form asp-action="CheckIn" method="post" class="d-inline">
                                    <input type="hidden" name="registrationId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-@(item.IsAttended ? "outline-warning" : "success")">
                                        <i class="bi bi-@(item.IsAttended ? "x-circle" : "check-circle")"></i>
                                        @(item.IsAttended ? "Hủy" : "Điểm danh")
                                    </button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <button class="btn btn-success" onclick="window.print()">
                <i class="bi bi-printer"></i> In danh sách
            </button>
            <button class="btn btn-primary" onclick="exportToExcel()">
                <i class="bi bi-file-earmark-excel"></i> Xuất Excel
            </button>
        </div>
    }
</div>

@section Scripts {
    <script>
        function exportToExcel() {
            alert('Chức năng xuất Excel đang được phát triển!');
        }
    </script>
}
